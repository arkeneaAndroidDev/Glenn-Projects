<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/backgroundimage" />

    <LinearLayout
        android:id="@+id/homeActivity_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/container_left_margin"
        android:layout_marginRight="@dimen/bottom_margin"
        android:layout_marginTop="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/audio_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/audio_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/audio" />

            <com.Arkenea.BuiltYourSelfEsteem.CustomeTextView
                android:id="@+id/audio_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left_margin"
                android:text="@string/audio"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ebook_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ebook_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ebook" />

            <com.Arkenea.BuiltYourSelfEsteem.CustomeTextView
                android:id="@+id/ebook_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left_margin"
                android:text="@string/ebooks"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/social_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/social_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fb" />

            <com.Arkenea.BuiltYourSelfEsteem.CustomeTextView
                android:id="@+id/social_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left_margin"
                android:text="@string/social"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share" />

            <com.Arkenea.BuiltYourSelfEsteem.CustomeTextView
                android:id="@+id/share_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left_margin"
                android:text="@string/share"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/review_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/review_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/review" />

            <com.Arkenea.BuiltYourSelfEsteem.CustomeTextView
                android:id="@+id/review_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left_margin"
                android:text="@string/review"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/help_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/help_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ebook" />

            <com.Arkenea.BuiltYourSelfEsteem.CustomeTextView
                android:id="@+id/help_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left_margin"
                android:text="@string/help"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/website_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/website_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/website" />

            <com.Arkenea.BuiltYourSelfEsteem.CustomeTextView
                android:id="@+id/website_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left_margin"
                android:text="@string/website"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/more_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more" />

            <com.Arkenea.BuiltYourSelfEsteem.CustomeTextView
                android:id="@+id/more_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left_margin"
                android:text="@string/more_app"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
